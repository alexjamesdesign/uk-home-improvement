{#
  Title: Hero
  Description: Hero
  Category: formatting
  Icon: cover-image
  Keywords: hero runner
  Mode: edit
  SupportsAlign: center
  SupportsMode: false
  SupportsMultiple: false
#}

<div class="relative w-full bg-center bg-cover py-14 hero">

	<span class="triangle-left"></span>
  <span class="triangle-left-bottom"></span>
  <span class="triangle-right-bottom"></span>

  <div class="relative w-full">

    <div class="container flex flex-wrap content-start md:content-between md:flex-row-reverse md:flex-nowrap">

      {% if fn('is_front_page') %}
      
        {% for post in latestpost %}

         {# Homepage - Image from latest post #} 
         {% include "_components/hero-image.twig" with {
           image : Image(post.thumbnail.src).src|resize(400, 200)|tojpg | default(theme.link~"/_assets/images/hero-fallback.jpg"),
         } %}

        {% endfor %}
      
      {% else %}
        
        {# Other Pages - Image from featured image OR fallback #} 
        {% include "_components/hero-image.twig" with {
           image : Image(post.thumbnail.src).src|resize(400, 200)|tojpg | default(theme.link~"/_assets/images/hero-fallback.jpg"),
         } %}
  
      {% endif %}  

      {% if fn('is_front_page') %}
        
        {# Homepage - latest post #}
        {% for post in latestpost %}

          <div class="flex flex-wrap content-center w-full md:mr-4 md:w-6/12 hero-left">
            <p class="h1xl">{{post.title}}</p>
            {{post.content|truncate(30|striptags|raw)}}
            
            {% include "_components/_atoms/button.twig" with {
              buttonText : "Read More",
              buttonLink : post.link,
              buttonIcon : "arrow-right",
              buttonClasses : "block pt-3",
            } %}
          </div>

        {% endfor %}

      {% elseif categories %}

          <div class="flex flex-wrap content-center w-full md:mr-4 md:w-6/12 hero-left">
            <p class="block w-full uppercase h2 text-zinc-500">{{preHeading}}</p>
            <p class="h1xl">{{heading}}</p>
          </div>

      {% else %}

        {# Other Posts / Pages - Hero Block #}
        {% if post.get_field('hero_title_options') == "custom" %}

          <div class="flex flex-wrap content-center w-full md:mr-4 md:w-6/12 hero-left">
            <p class="h1xl">{{post.custom_title}}</p>
            <p class="sub-title">{{post.content|truncate(30|striptags)}}</p>
          </div>

        {% else %}

          <div class="flex flex-wrap content-center w-full md:mr-4 md:w-6/12 hero-left">
            <p class="block w-full uppercase h2 text-zinc-500">{{preHeading}}</p>
            <p class="h1xl">{{heading}}</p>
          </div>

        {% endif %}   

      {% endif %}
   
    </div>

  </div>

</div>

