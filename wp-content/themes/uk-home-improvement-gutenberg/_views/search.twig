{% extends '_layout/base.twig' %}

{% block hero %}
	{% include '_blocks/hero.twig' with { 
		preHeading: "Results for",
		heading: search_query|capitalize,
		imageComponent: "short",
		image: post.thumbnail,
	} %}
{% endblock %}

{% block content %}

	{# News Index - Variant 2 #}

	<div class="relative w-full bg-secondary-light white-bg-top">
		
		<div class="container py-6 md:py-8">
		
			<div class="flex flex-wrap w-full gap-6">
			
				{% for post in posts %}
					{% include "_components/_atoms/card.twig" with {
						category : "Category",
						cardLink: function("get_permalink", post.ID),
						title : post.title,
						snippet : "Snippet",
					} %}
				{% endfor %}	

			</div>

		</div>
		
	</div>

	<section class="flex items-center justify-center mt-8 mb-4">

		{% include "_components/pagination.twig" %}

	</section>

{% endblock %}
