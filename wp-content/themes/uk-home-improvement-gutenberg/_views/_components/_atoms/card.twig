<div class="flex items-stretch w-full mb-10 md:w-1/2 lg:w-1/3 md:px-4 lg:px-6">
    <a href="{{ post.link }}" class="relative flex flex-wrap justify-start bg-blue-100 border-b-4 group border-b-primary-dark hover:bg-blue-300 focus:bg-blue-300">
        <div class="relative w-full overflow-hidden grow-0">
            <img data-src="{{ Image((post.thumbnail)).src|resize(800,390) }}" class="object-cover object-center w-full lazyload" width="800" height="390" />
        </div>

        <div class="p-6 grow-1">
            <span class="block mb-2 leading-tight text-black uppercase text-md md:text-md">{{ post.category }}</span>
            <span class="block mb-8 text-lg font-bold leading-tight text-black md:text-xl">{{ post.title }}</span>
        </div>
        
        <div class="card-arrow"></div>
        {{ function('icon', 'arrow-right', 'absolute bottom-2 right-2 text-white text-xl') }}
    </a>
</div>