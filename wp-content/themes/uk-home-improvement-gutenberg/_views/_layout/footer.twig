{# Space for an Ad #} 
  <div class="container relative z-20 mb-10 md:pb-0 md:pt-10">
    <div class="bg-gray-400 h-36"></div>
  </div>

{% set footerLinkClasses = "block py-2 px-3 text-gray-500 hover:text-black focus:text-black" %}

<footer class="p-4 text-center bg-primary-light md:p-8 lg:px-0 lg:text-left">

	<div class="container flex-wrap lg:flex">

		<div class="relative z-10 w-full py-6 overflow-visible lg:w-1/3 bg-secondary-light pb-28">

			<div class="absolute top-0 right-0 bg-secondary-light w-[1000px] h-full"></div>

			<a aria-label="Go to homepage" class="relative block pb-6" href="{{site.site_url}}">
				<img class="max-w-44" src="{{options.site_logo.url}}" alt="{{site.title}} Logo"/>
			</a>

			<ul class="relative">
				{% for item in secondaryMenu.items %}
					<li class="{{item.class}}">
						<a href="{{item.url}}" class="{{footerLinkClasses}} pl-0">{{item.name}}</a>
					</li>
				{% endfor %}
			</ul>

		</div>

		<div class="flex flex-wrap w-full p-6 place-content-end lg:w-2/3 pb-28">

			<h3 class="w-full pl-2">Categories</h3>
			
			<ul class="flex flex-wrap w-full pb-6">
				{% for item in primaryMenu.items %}
					<li>
						<a href="{{item.url}}" class="{{footerLinkClasses}}">{{item.name}}</a>
					</li>
					{% if item.children %} {% for child in item.children %}
						<li>
							<a href="{{child.link}}" class="{{footerLinkClasses}}">{{child.name}}</a>
						</li>
					{% endfor %} {% endif %}
					
				{% endfor %}
			</ul>

		</div>

		<div class="z-10 items-center justify-between w-full p-6 bg-white -mt-28 lg:flex">
			<div class="text-gray-200">
				<p>{{site.title}} is a registered company in England.</p>
				<p>&copy; {{site.title}} {{ 'now' | date('Y') }}. All Rights Reserved</p>
			</div>

			<div>
				<form role="search" method="get" id="searchform" data-animate="fade" class="flex justify-between w-64 mr-4 border-2 border-gray-300 flex-nowrap grow-0 shrink-0 searchform" action="{{ site.link }}">
					<input type="text" placeholder="SEARCH" value="{{ function('get_search_query') }}" name="s" id="searchbox" class="w-[214px]" />
					<input type="submit" id="searchsubmit" value=" " class="border-l-2 w-[42px] border-gray-300" />
				</form>
			</div>
			
		</div>

	</div>

</footer>

<a id="back-top" class="fixed bottom-0 right-0 z-50 p-2 -mb-20 text-center transition-all duration-1000 bg-gray-500 opacity-0 rounded-xl hover:bg-gray-600" href="javascript:">
	<span class="text-sm text-black no-underline">
		{{ function('icon', 'angle-up', 'w-8 h-8') }}
		<span class="block text-lg uppercase">Top</span>
	</span>
</a>

<div id="pixel-to-watch"></div>
