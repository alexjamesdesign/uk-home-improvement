{# Space for an Ad #} 
  <div class="container relative z-20 mb-10 md:pb-0 md:pt-10">
    <div class="bg-gray-400 h-36">
		{{options.ad_space_two}}
	</div>
  </div>

{% set footerLinkClasses = "block mb-1 lg:pb-2 px-3 text-gray-500 hover:text-black focus:text-black" %}

<footer class="p-4 text-center bg-primary-light md:p-8 lg:px-0 lg:text-left">

	<div class="container flex-wrap lg:flex">

		<div class="relative z-10 w-full py-6 overflow-visible lg:w-1/3 bg-secondary-light lg:pb-28">

			<div class="hidden lg:block absolute top-0 right-0 bg-secondary-light w-[1000px] h-full"></div>

			<a aria-label="Go to homepage" class="relative block pb-6" href="{{site.site_url}}">
				<img class="mx-auto lg:mx-0 max-w-44" src="{{options.site_logo.url}}" alt="{{site.title}} Logo"/>
			</a>

		</div>

		<div class="flex flex-wrap w-full p-6 place-content-start lg:w-2/3 lg:pb-36">

			<div class="w-full pb-0 pr-0 lg:pr-5 lg:w-auto">

				<h3 class="w-full lg:pl-3">Navigate</h3>

				<ul class="flex flex-wrap justify-center w-full pb-3 lg:justify-start">
					{% for item in secondaryMenu.items %}
						<li>
							<a href="{{item.url}}" class="{{footerLinkClasses}}">{{item.name}}</a>
						</li>
					{% endfor %}
				</ul>

			</div>

			<div class="w-full pb-0 lg:w-auto">

				<h3 class="w-full lg:pl-3">Categories</h3>
				
				<ul class="flex flex-wrap justify-center w-full pb-3 lg:justify-start">
					{% for item in primaryMenu.items %}
						<li>
							<a href="{{item.url}}" class="{{footerLinkClasses}}">{{item.name}}</a>
						</li>
						{# {% if item.children %} {% for child in item.children %}
							<li class="hidden lg:block">
								<a href="{{child.link}}" class="{{footerLinkClasses}}">{{child.name}}</a>
							</li>
						{% endfor %} {% endif %} #}
						
					{% endfor %}
				</ul>

			</div>

		</div>

		<div class="z-10 items-center justify-between w-full p-6 bg-white lg:-mt-28 lg:flex">
			<div>
				<p class="text-gray-400">{{site.title}} is a registered company in England.</p>
				<p class="mb-6 text-gray-400 lg:mb-0">&copy; {{site.title}} {{ 'now' | date('Y') }}. All Rights Reserved</p>
			</div>

			<div>
				<form role="search" method="get" id="searchform" data-animate="fade" class="flex justify-between w-full mt-3 mr-4 border-2 border-gray-300 lg:mt-0 lg:w-64 flex-nowrap grow-0 shrink-0 searchform" action="{{ site.link }}">
					<input type="text" placeholder="SEARCH" value="{{ function('get_search_query') }}" name="s" id="searchbox" class="w-[214px]" />
					<input type="submit" id="searchsubmit" value=" " class="border-l-2 w-[42px] border-gray-300" />
				</form>
			</div>
			
		</div>

	</div>

</footer>

<a id="back-top" class="fixed bottom-0 right-0 z-50 p-2 -mb-20 text-center transition-all duration-1000 bg-gray-500 opacity-0 rounded-xl hover:bg-gray-600" href="javascript:">
	<span class="text-sm text-black no-underline">
		{{ function('icon', 'angle-up', 'w-8 h-8') }}
		<span class="block text-lg uppercase">Top</span>
	</span>
</a>

<div id="pixel-to-watch"></div>
