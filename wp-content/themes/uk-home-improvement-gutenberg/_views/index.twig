		<form role="search" method="get" autocomplete="off" action="{{ function('get_permalink', function('get_queried_object_id', current_term )) }}">

            <div class="latest-news__filters__select">
    
                <select class="news-filter" name="cat">
        
                    <option value="default">Select by category</option>
        
                    {% for cat in categories %}
            
                        <option value='{{cat.id}}'>{{cat.name}}</option>
            
